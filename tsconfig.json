{
  "compilerOptions": {
    "strict": true,
    "alwaysStrict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "moduleResolution": "node",
    "target": "ESNext",
    "lib": [
      "ESNext",
      "ESNext.Array",
      "ESNext.AsyncIterable",
      "ESNext.BigInt",
      "ESNext.Intl",
      "ESNext.Promise",
      "ESNext.String",
      "ESNext.Symbol"
    ],
    "rootDir": "."
  },
  "include": ["./src/**/*"],
  "exclude": ["./node_modules/**/*"]
}
