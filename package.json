{
  "name": "juwuscripts",
  "version": "1.0.0",
  "description": "Collection of QoL and quirky scripts. Feel free to use them.",
  "main": "./loader.ts",
  "scripts": {
    "build:prettier": "prettier --write \"./src/**/*.{js,ts}\"",
    "build:loader": "ts-node ./loader.ts",
    "build:extension": "cd extension && npm run build && cd ..",
    "build:zip": "ts-node ./zipper.ts",
    "build": "npm run build:prettier && npm run build:loader && npm run build:extension",
    "start": "cd extension && npm start"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Arcasias/scripts.git"
  },
  "keywords": [
    "juwu"
  ],
  "author": {
    "name": "Julien Mougenot"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Arcasias/scripts/issues"
  },
  "homepage": "https://github.com/Arcasias/scripts#readme",
  "devDependencies": {
    "@types/archiver": "^5.3.1",
    "@types/react": "^18.0.21",
    "@types/react-dom": "^18.0.6",
    "@types/uglify-js": "^3.17.0",
    "archiver": "^5.3.1",
    "prettier": "^2.4.1",
    "ts-node": "^10.9.1",
    "uglify-js": "^3.17.2"
  }
}
