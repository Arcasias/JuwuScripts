{
  "compilerOptions": {
    "strict": true,
    "alwaysStrict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "jsx": "react",
    "moduleResolution": "Classic",
    "target": "ESNext",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext",
      "ESNext.Array",
      "ESNext.AsyncIterable",
      "ESNext.BigInt",
      "ESNext.Intl",
      "ESNext.Promise",
      "ESNext.String",
      "ESNext.Symbol"
    ],
    "types": ["node", "chrome", "vite/client", "vite-plugin-svgr/client"],
    "rootDir": "src"
  },
  "include": ["./src/**/*"]
}
